					<li><a class="dropdown-item" href="/view/it/2018">2018</a></li>
        </ul>
			</li>
		</ul>
	</li>

		<% if(currentUser){%>
			<li class="nav-item active">
				<a class="nav-link" href="/">Welcome <%=currentUser.firstName%></a>
			</li>
			<li class="nav-item active">
				<a class="nav-link" href="/logout">Logout</a>
			</li>
		<% } %>

	</ul>
				 
  </div>
</nav>

	<section id="alumnis">
		<div class="container my-3 py-5 text-center">
			<div class="row mb-5">
				<div class="col">
					<h1>Batch: <% if(users.length != 0) {	%>
							 20<%= users[0].rollNo.substring(5,7) %> 
							<% } %>
						</h1>
					<h2>Our Alumnus</h2>
				</div>
			</div>
			<div class="row">

			<% users.forEach(function(user){ %>
				<div class="col-lg-3 col-md-6 anyclass">
					<div class="card h-70">
						<div class="card-body">
							<img src="/images/alumni1.png" alt="" class="img-fluid rounded-circle w-50 mb-3" >
							<h3><%=user.firstName%> <%= user.lastName%></h3>
							<h5><%=user.job%></h5>
							<p><%=user.branch%></p>
							<div class="d-flex flex-row justify-content-center">
								<div class="p-4">
									<a href="#"><i class="fab fa-github"></i></a>
								</div>
								<div class="p-4">
									<a href="#"><i class="fab fa-linkedin"></i></a>
								</div>
							</div>
							<button type="button" class="btn btn-outline-primary" data-toggle="modal" data-target="#exampleModalLong">Full Detials</button>
							<!-- <a href="/view/ece/2014/<%=user._id%>" > -->
							</a>
							<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
								<div class="modal-dialog" role="document">
									<div class="modal-content">
										<div class="modal-header">
											<div class="modal-title" id="exampleModalLongTitle">
												<img src="/images/alumni1.png" alt="" class="img-fluid rounded-circle w-20 mb-3 mx-auto d-block" id="modal-image">
											</div>
											<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
										</div>
										<div class="modal-body">
													<p>Branch : <%=user.branch%></p>
													<p>Contact : <%=user.username%></p>
										</div>
										<div class="modal-footer">
											<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>			
			<% }) %>
	
	</section>
 	
